<h1>To-do List</h1>

<ul class="tasks"><% @tasks.each do |task| %>
  <li>
    <div class=task>
    <p><% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, task_path(task), method: :delete, data: {confirm: "Are you sure?"} %></p>
    </div>
  </li>
<% end %>
</ul>

<br>

<i class="fas fa-plus"></i><%= link_to "Add a new task", new_task_path %>
